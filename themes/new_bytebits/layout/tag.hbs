{{> navbar }}

<main class="curtain">
    <div class="container">
        <h1>{{ page.tag }}</h1>
        <ul class="article-list">


        {{# each (filter site.posts.data (hasTag page.tag)) as |post| }}
            <li class="article-short">
                <div class="publication-date">{{ date post.date }}</div>
                <a href="{{ post.path }}">{{ post.title }}</a>
            </li>
        {{/ each }}
        </ul>
</div>
</main>

{{> footer }}